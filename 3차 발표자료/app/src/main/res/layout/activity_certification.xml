<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CertificationActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_certification_label"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="사용자 인증 비밀번호 \n6자리 숫자를 입력해 주세요."/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_certification_setting"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textAlignment="center"
                android:maxLength="6"
                android:id="@+id/et_certification_pwd_setting"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/login_box_right_left_magin"
                android:layout_marginRight="@dimen/login_box_right_left_magin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="numberPassword"
                android:hint="인증 숫자 6자리 입력" />

            <EditText
                android:textAlignment="center"
                android:maxLength="6"
                android:id="@+id/et_certification_pwd_confirm"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/login_box_right_left_magin"
                android:layout_marginRight="@dimen/login_box_right_left_magin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="numberPassword"
                android:hint="인증 번호 확인" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_certification_pwd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textAlignment="center"
                android:maxLength="6"
                android:id="@+id/et_certification_pwd"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/login_box_right_left_magin"
                android:layout_marginRight="@dimen/login_box_right_left_magin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="numberPassword"
                android:hint="인증 번호 입력" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_certification_submit"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/login_box_right_left_magin"
            android:layout_marginRight="@dimen/login_box_right_left_magin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증 번호 입력"
            android:textColor="@color/white"
            android:background="@drawable/round_box_black"/>

        <TextView
            android:id="@+id/tv_certification_move_login"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nomal_text_size"
            android:text="로그인 화면으로"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>