<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/login_box_right_left_magin"
    android:layout_marginRight="@dimen/login_box_right_left_magin"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/hotel_main_image"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_payment_type"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:textAlignment="viewEnd"
                    android:id="@+id/tv_payment_bed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="더블"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:textSize="15dp"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tv_payment_check_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:textSize="15dp"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_payment_check_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="15dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약 일정 선택"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_box">
        <TextView
            android:id="@+id/tv_payment_check_in_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/03/09"
            android:textSize="@dimen/nomal_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ~ "
            android:textSize="@dimen/nomal_text_size"/>

        <TextView
            android:id="@+id/tv_payment_check_out_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/03/10"
            android:textSize="@dimen/nomal_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제 금액 : "
            android:textSize="@dimen/nomal_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_payment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50,000"
            android:textSize="@dimen/nomal_text_size"
            android:textColor="@color/red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 원"
            android:textSize="@dimen/nomal_text_size"
            android:textColor="@color/black"/>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_stroke"
        android:background="@color/gray"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제 수단 선택"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_pament_credit"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@drawable/round_box">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="신용카드"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_pament_naver"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@drawable/round_box">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="네이버\n페이"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_pament_kakao"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@drawable/round_box">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="카카오\n페이"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_payment_submit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제"
        android:textColor="@color/white"
        android:background="@drawable/round_box_black" />



</LinearLayout>