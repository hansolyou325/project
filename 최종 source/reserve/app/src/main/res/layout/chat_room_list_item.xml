<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/login_box_right_left_magin"
    android:layout_marginLeft="@dimen/login_box_right_left_magin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_admin_chat_room_layout"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_chat_room_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅방 제목"
            android:textSize="@dimen/nomal_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_chat_room_item_content"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅방 제목"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/gray"/>
    </LinearLayout>
</LinearLayout>