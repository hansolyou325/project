<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_margin="@dimen/login_box_right_left_magin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_box">
        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_admin_room_state_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type"
            android:textSize="@dimen/nomal_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginRight="30dp"
            android:gravity="right"
            android:id="@+id/tv_admin_room_state_item_room_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room_num"
            android:textSize="@dimen/nomal_text_size"
            android:textColor="@color/black"/>
    </LinearLayout>




</LinearLayout>